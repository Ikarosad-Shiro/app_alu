<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:id="@+id/main"
    android:background="@drawable/aluminio">

    <!-- Título de la vista de mapa -->
    <TextView
        android:id="@+id/tv_map_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Vista del Mapa"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="sans-serif-medium"
        android:paddingBottom="20dp" />

    <!-- Fragmento del mapa -->
    <fragment
        android:id="@+id/map_container"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Contenedor para los botones de tipo de mapa -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="10dp">

        <Button
            android:id="@+id/btn_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Normal"
            android:fontFamily="sans-serif-medium" />

        <Button
            android:id="@+id/btn_satellite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Satélite"
            android:fontFamily="sans-serif-medium" />

        <Button
            android:id="@+id/btn_terrain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Terreno"
            android:fontFamily="sans-serif-medium" />

        <Button
            android:id="@+id/btn_hybrid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Híbrido"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Botón para guardar ubicación -->
    <Button
        android:id="@+id/btn_save_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Ubicación"
        android:fontFamily="sans-serif-medium"
        android:paddingVertical="10dp" />

    <!-- Botón de regreso -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:fontFamily="sans-serif-medium"
        android:paddingVertical="10dp" />
</LinearLayout>
